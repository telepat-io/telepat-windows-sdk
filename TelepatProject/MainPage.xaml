<Page
    x:Class="TelepatProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TelepatProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Grid_Loaded">

        <StackPanel x:Name="buttonContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Button x:Name="register" Content="Register User" IsEnabled="False" HorizontalAlignment="Stretch" Click="register_Click" Margin="3" />

            <Button x:Name="login"    Content="Login"         IsEnabled="False" HorizontalAlignment="Stretch" Click="login_Click"    Margin="3" />

            <Button x:Name="logout"   Content="Logout"        IsEnabled="False" HorizontalAlignment="Stretch" Click="logout_Click"   Margin="3" />

            <Button x:Name="contexts" Content="Get contexts"  IsEnabled="False" HorizontalAlignment="Stretch" Click="contexts_Click" Margin="3" />

        </StackPanel>
        
    </Grid>
</Page>
